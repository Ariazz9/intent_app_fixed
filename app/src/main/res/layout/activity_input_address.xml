<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDataActivity"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:id="@+id/ugm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_ugm2"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:padding="15dp"
        android:id="@+id/gadjah"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gadjah" />

    <androidx.cardview.widget.CardView

        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="56dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#D9FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profil"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="90dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="98dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatarrrr" />
            </androidx.cardview.widget.CardView>
            <EditText
                android:layout_below="@id/profil"
                android:id="@+id/edt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                />
            <EditText
                android:layout_below="@id/edt_nama"
                android:id="@+id/edt_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                />
            <EditText
                android:layout_below="@id/edt_nim"
                android:id="@+id/edt_prodi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                />
            <EditText
                android:layout_below="@id/edt_prodi"
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                />
            <EditText
                android:layout_below="@id/edt_address"
                android:id="@+id/edt_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                />
            <Button
                android:layout_below="@id/edt_quote"
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>