<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    >

    <ImageView
        android:id="@+id/ugm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_ugm2"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:padding="15dp"
        android:id="@+id/gadjah"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gadjah" />

    <androidx.cardview.widget.CardView

        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="56dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#D9FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profil"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="90dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="98dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatarrrr" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:layout_below="@id/profil"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:text="" />

            <TextView
                android:id="@+id/tv_prodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nim"
                android:layout_centerHorizontal="true"
                android:text="" />

            <TextView
                android:id="@+id/tv_daerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_prodi"
                android:layout_centerHorizontal="true"
                android:text="" />


            <TextView
                android:id="@+id/tv_hobi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_daerah"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hobi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="italic | bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_quote"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linked"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/linkedin"
                    android:scaleType="centerCrop"
                    android:onClick="openLinkedIn"/>

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/facebook"
                    android:scaleType="centerCrop"
                    android:onClick="openFb"/>

                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/instagram"
                    android:scaleType="centerCrop"
                    android:onClick="openInsta"/>

                <ImageView
                    android:id="@+id/github"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/github"
                    android:scaleType="centerCrop"
                    android:onClick="openGithub"/>
                <ImageView
                    android:id="@+id/gmail"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/gmail"
                    android:scaleType="centerCrop" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
